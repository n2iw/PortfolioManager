<% @title = "Pictures for #{@work.name}" %>
<div class="content">
  <h1><%= @work.name %></h1>
  <p><%= @work.description %></p>

  <table id="manage_works_table">
  <tr>
    <td></td>
    <td>
      <%= form_for @new_picture, url: {action: :create}, html: {multipart: true} do |f| %>
        <%= render partial: 'form', locals: {f: f} %>
      <% end %>
    </td>
  </tr>
  <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.file_file_name %></td>
      <td><%= link_to button_tag("Delete #{picture.file_file_name}", type: 'button'), delete_work_picture_path(id: picture.id) %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= image_tag picture.file.url(:thumb), alt: 'Picture' %></td> 
      <td>
        <%= form_for picture, url: {action: :update, id: picture.id}, html: {multipart: true} do |f| %>
          <%= render partial: 'form', locals: {f: f} %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td></td>
    </tr>
  <% end %>
  </table>
</div>

