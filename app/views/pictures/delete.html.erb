<% @title = "Delete Picture!" %>
<div class='col-md-4 col-md-offset-4 well'>
  <h4 class='form-title'>Delete "<%= @picture.file_file_name %>"?</h4>

  <div class='form-group'>
    <%= image_tag @picture.file.url(:thumb) %>
  </div>
  <%= form_for @picture, :url => {action: :destroy},  method: 'delete', html:{class: 'form delete-picture'} do |f| %>
    <div class='form-group'>
      <%= link_to 'Cancel', {action: :index}, class: 'btn btn-success' %>
      <%= f.submit "Delete", class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>
