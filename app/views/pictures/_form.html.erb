<%= error_messages_for(@picture) %>
<div class='form-group'>
  <%= label_tag "picture_position_#{f.object.id}", "Position:", class: 'control-label col-md-2' %>
  <div class='col-md-3'>
    <%= f.select :position, 1..@picture_count, {}, class: 'form-control', id: "picture_position_#{f.object.id}" %>
  </div>
</div>

<div class='form-group'>
  <%= label_tag "picture_file_#{f.object.id}", "File:", class: 'control-label col-md-2' %>
  <div class='col-md-10'><%= f.file_field :file, class: 'form-control', id: "picture_file_#{f.object.id}" %></div>
</div>

<div class='form-group'>
  <div class='col-md-5 col-md-offset-2'><%= f.submit class: 'form-control btn btn-primary' %></div>
</div>
