<%= error_messages_for(@picture) %>
<div class='form-group'>
  <%= f.label :position, class: 'control-label col-md-2' %>
  <div class='col-md-3'>
    <%= f.select :position, 1..@picture_count, {}, class: 'form-control' %>
  </div>
</div>

<div class='form-group'>
  <%= f.label :file, class: 'control-label col-md-2' %>
  <div class='col-md-10'><%= f.file_field :file, class: 'form-control' %></div>
</div>

<div class='form-group'>
  <div class='col-md-5 col-md-offset-2'><%= f.submit class: 'form-control btn btn-primary' %></div>
</div>
