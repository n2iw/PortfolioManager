<% @title = "Delete Work!" %>
<div class='col-md-4 col-md-offset-4 well'>
  <h4 class='form-title'>Delete "<%= @work.name %>"?</h4> 

  <div class='form-group'>
    <%= image_tag @work.thumbnail.url(:thumb), alt: "#{@work.name}" %>
  </div>
  <%= form_for @work, :url => {action: :destroy}, method: 'delete', html: {class: 'form delete-work'} do |f| %>
    <div class='form-group'>
      <%= link_to 'Cancel', {action: (@work.award ? :manage_awards : :index)}, class: 'btn btn-success' %>
      <%= f.submit 'Delete', class: 'btn btn-danger'%>
    </div>
  <% end %>
</div>
