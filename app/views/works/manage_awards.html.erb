<% @title = 'Manage Awards' %>
<% @works.each do |work| %>
  <div class='well'>
    <div class='row'>
      <h4 class='form-title'><%= work.name %></h4>
      <div class='col-md-2'>
        <%= link_to image_tag(work.thumbnail.url(:thumb), alt: work.name), {action: :show, id: work.id}  %>
      </div>

      <div class='col-md-10'>
        <%= form_for work, url: update_position_work_path(work), html: {class: 'form-horizontal'} do |f| %>

          <div class='form-group'>
            <%= f.label :position, for: "work_position_#{work.id}", class: 'control-label col-md-3' %>
            <div class='col-md-9'><%= f.select :position, 1..@work_count, {}, class: 'form-control', id: "work_position_#{work.id}"  %></div>
          </div>

          <div class='form-group'>
            <div class='col-md-9 col-md-offset-3'>
              <div class='checkbox text-left'>
                <label>
                  <%= f.check_box :visible, {id: "work_visible_#{work.id}"}  %>Visible
                </label> 
              </div>
            </div>
          </div>

          <div class='form-group'>
            <div class='col-md-9 col-md-offset-3'>
              <%= f.submit 'Update Position and Visibility', class: 'form-control btn btn-success' %>
            </div>
          </div>


          <div class='form-group'>
            <div class='col-md-4 col-md-offset-3'>
              <%= link_to "Edit", edit_work_path(work), class: 'form-control btn btn-primary' %>
            </div>

            <div class='col-md-4 col-md-offset-1'>
              <%= link_to "Delete", delete_work_path(work), class: 'form-control btn btn-danger' %>
            </div>
          </div>

          <div class='form-group'>
            <div class='col-md-4 col-md-offset-3'>
              <%= link_to 'Manage Pictures', work_pictures_path(work), class: 'form-control btn btn-info' %>
            </div>
            <div class='col-md-4 col-md-offset-1'>
              <%= link_to 'Manage Process Pictures', work_process_pictures_path(work), class: 'form-control btn btn-info' %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
<% end %>
