<% @title = "Admin Login" %>

<div class="col-md-8 col-md-offset-2 well">
  <%= form_tag({action: 'attempt_login'}, {class: 'form-horizontal'}) do %>
      <div class='form-group'>
        <h3>Admin User login</h3>
      </div>
      <div class='form-group'>
        <%= label_tag :username, nil,  class: 'control-label col-md-3' %>
        <div class='col-md-9'><%= text_field_tag :username, nil, class: 'form-control' %></div>
      </div>
      <div class='form-group'>
        <%= label_tag :password, nil, class: 'control-label col-md-3' %>
        <div class='col-md-9'><%= password_field_tag :password, nil, class: 'form-control' %></div>
      </div>
      <div class='form-group'>
        <div class='col-md-9 col-md-offset-3'>
          <%= submit_tag 'Log In', class: 'form-control btn btn-success' %>
        </div>
      </div>
  <% end %>
</div>
